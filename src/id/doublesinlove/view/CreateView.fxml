<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTimePicker?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" fx:controller="id.doublesinlove.controller.CreateController">
   <children>
      <AnchorPane fx:id="createPane" prefHeight="240.0" prefWidth="480.0">
         <children>
            <JFXTextArea fx:id="todoInput" layoutX="10.0" layoutY="14.0" prefHeight="56.0" prefWidth="460.0" promptText="Write your todo here" />
            <JFXButton fx:id="saveButton" buttonType="RAISED" layoutX="413.0" layoutY="99.0" mnemonicParsing="false" onAction="#saveToDo" text="SAVE" />
            <JFXToggleButton fx:id="reminderToggle" layoutX="10.0" layoutY="83.0" mnemonicParsing="false" onAction="#setReminderToggle" text="Create Reminder" />
            <JFXDatePicker fx:id="datePicker" layoutX="14.0" layoutY="141.0" />
            <JFXTimePicker fx:id="timePicker" layoutX="207.0" layoutY="141.0" prefHeight="29.0" prefWidth="193.0" />
         </children>
      </AnchorPane>
   </children>
</StackPane>
